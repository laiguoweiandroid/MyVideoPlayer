<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >
    <RelativeLayout
        android:id="@+id/video_layout"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        >
        <com.example.guowei.myvideoplayer.CoustomView.CustomVideoView
            android:id="@+id/video_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <include layout="@layout/center_tip_progress"/>
        <LinearLayout
            android:id="@+id/video_controller_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            >
            <SeekBar
                android:id="@+id/video_seek"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:indeterminate="false"
                android:progressDrawable="@drawable/seekbar_style2"
                android:max="100"
                android:progress="20"
                android:thumb="@null"
                android:layout_marginLeft="-20dp"
                android:layout_marginRight="-20dp"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#101010">
                <LinearLayout
                    android:id="@+id/left_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/video_play"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/pause_btn_style"
                        android:layout_marginLeft="16dp"/>
                    <TextView
                        android:id="@+id/tv_total_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:textColor="#eee"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="/"
                        android:layout_marginLeft="3dp"
                        android:textColor="#888"/>
                    <TextView
                        android:id="@+id/tv_current_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:textColor="#888"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/right_layout"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|right"
                    android:layout_toRightOf="@id/left_layout"
                    android:layout_alignParentRight="true">
                    <ImageView
                        android:id="@+id/iv_volume"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@mipmap/volume"
                        android:visibility="gone"/>
                    <SeekBar
                        android:id="@+id/volume_seek"
                        android:layout_width="100dp"
                        android:layout_height="5dp"
                        android:max="100"
                        android:progress="20"
                        android:layout_marginLeft="-10dp"
                        android:indeterminate="false"
                        android:progressDrawable="@drawable/seekbar_style"
                        android:thumb="@null"
                        android:visibility="gone"
                        />
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="32dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="#1e1e1e"
                        />
                    <ImageView
                        android:id="@+id/iv_screen"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="16dp"
                        android:src="@mipmap/full_screen"
                        android:layout_marginRight="16dp"/>

                </LinearLayout>


            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>
